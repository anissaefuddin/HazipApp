<Window x:Class="Hazip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hazip"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="New" />
                    <MenuItem Header="Open" Click="OpenFile_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Cut"/>
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Paste"/>
                </MenuItem>
            </Menu>
            <TabControl Height="750" SelectedIndex="{Binding SelectedIndexMenu }" >
                <TabItem Header="Study Data" Height="60"  >
                    <Frame Name="frameMenu1" Source="Screen/Pages/StudyDataMenu/PageIndex.xaml"/>
                </TabItem>
                <TabItem Header="TabItem" Height="60">
                    
                </TabItem>
            </TabControl>

        </StackPanel>
    </Grid>
</Window>
